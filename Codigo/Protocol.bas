132         If EsGM(UserIndex) Then
        
134             If PersonajeExiste(name) Then
136                 TargetUserName = name
                
                Else
138                 Call WriteConsoleMsg(UserIndex, "El personaje " & TargetUserName & " no existe.", FontTypeNames.FONTTYPE_INFO)
