            Else
        
140             TargetUserName = .name
            
            End If

142         If Database_Enabled Then
144             Count = GetUserAmountOfPunishmentsDatabase(TargetUserName)
                
            Else
146             Count = val(GetVar(CharPath & name & ".chr", "PENAS", "Cant"))

